@model AddViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Navbars</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-route="admin-navbar-add">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                        <div class="form-group">
                            <label>Name</label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Url</label>
                            <input asp-for="Url" class="form-control">
                            <span asp-validation-for="Url" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Row Number</label>
                            <input asp-for="RowNumber" class="form-control">
                            <span asp-validation-for="RowNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            @Html.DisplayNameFor(n => n.IsMain)
                            <input asp-for="IsMain" type="checkbox">

                        </div>
                        <div class="form-group">

                            Header Navbar :  @Html.CheckBoxFor(n => n.IsHeader)

                        </div>
                        <div class="form-group">

                            Footer Navbar : @Html.CheckBoxFor(n => n.IsFooter)

                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>